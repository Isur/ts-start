{
  "name": "ts-start",
  "version": "1.0.0",
  "description": "Typescript starter app",
  "main": "index.js",
  "scripts": {
    "dev": "npm run build && concurrently \"npm run watch-compile\" \"npm run watch-dev\"",
    "watch-compile": "swc src -w --out-dir dist",
    "watch-dev": "nodemon --watch \"dist/**/*\" -e js ./dist/index.js",
    "build": "swc src -d dist",
    "start": "NODE_ENV=production node dist/index.js",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint ./src --ext .ts --max-warnings=0 && prettier --check ./src",
    "lint:fix": "eslint ./src --ext .ts --fix && prettier --write ./src"
  },
  "keywords": [
    "typescript",
    "starter",
    "swc",
    "jest",
    "eslint",
    "prettier"
  ],
  "author": "Isur",
  "license": "ISC",
  "devDependencies": {
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.74",
    "@swc/jest": "^0.2.27",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.8",
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.2.1",
    "chokidar": "^3.5.3",
    "concurrently": "^8.2.0",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.0",
    "jest": "^29.6.2",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.1",
    "rimraf": "^5.0.1",
    "typescript": "^5.1.6"
  }
}
